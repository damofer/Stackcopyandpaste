<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Category</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     
    <% @posts.each do |post| %>    
      <tr>
        
        
       
        <td><%= post.created_at %></td>
        <td ><%= link_to post.title , post %></td>
       
        <td><%= post.category %></td>
        <td><%= post.user.username %></td>
        
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
      
    <% end %>
  </tbody>
</table>


<table>
  <thead>
    <tr>
      <th>Category</th>
   
    </tr>
  </thead>

  <tbody>

     
    <% @category.each do |category| %>
      <tr>
        
        
       
        <td ><%= link_to category.category, posts_path(category: category.category) %></td>
       
      </tr>
      
      
    <% end %>
  </tbody>
</table>







<br>

